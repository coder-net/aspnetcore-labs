@model IEnumerable<aspnet.Models.TopicMessage>

@{
    ViewData["Title"] = "Home";
}

@foreach (var message in Model)
{
    <div style="margin:10px; padding:0px" id="@message.Id">
        <div style="border-bottom:solid 1px; border-bottom-color:cornflowerblue">
            <h3><i>Discuss inside</i> <b><a href="/Forum/Discuss/@message.TopicId">@message.Topic.Name</a></b></h3>
        </div>
        <div style="display:flex">
            <div style="margin-right:auto; font-size:12px">
                <span>by <a href="#">@message.User.UserName</a></span>
                <span> @message.CreationTime.ToString()</span>
            </div>

      

        </div>

        <div style="margin-left:20px; font-size:18px">
            <markdown content="@message.Text" />
        </div>
    </div>

    <hr />
}

