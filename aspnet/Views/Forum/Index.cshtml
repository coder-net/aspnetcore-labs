@model IEnumerable<aspnet.Models.Topic>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-2">
        <h1 class="my-4">
            Forum
        </h1>
    </div>
    <div class="col-md-5">
        @if (User.Identity.IsAuthenticated)
        {
            <a class="btn btn-default" style="margin-top:25px" asp-action="Create">Add topic</a>
        }
    </div>
</div>

<div id="container">
</div>

<hr/>

<div class="pagination" id="pagination" style="padding:0px; margin:0px">
    <button id="prev-page-btn" class="btn btn-default" onClick="changePage(-1)" disabled>
        prev
    </button>
    <button id="next-page-btn" class="btn btn-default" onClick="changePage(1)" disabled>
        next
    </button>
</div>


<script type="text/javascript">
    const pagination = {
        currentPage: 1,
        lastPage: 1,
        perPage: 3
    };
    let content = [];
    checkDisable = () => {
        $("#prev-page-btn").attr("disabled", false);
        $("#next-page-btn").attr("disabled", false);
        if (pagination.currentPage == 1) {
            $("#prev-page-btn").attr("disabled", true);
        }
        if (pagination.currentPage == pagination.lastPage) {
            $("#next-page-btn").attr("disabled", true);
        }
    };
    changePage = (x) => {
        const newPage = pagination.currentPage + x;
        if (newPage > 0 && newPage <= pagination.lastPage) {
            pagination.currentPage = newPage;
        }
        updateContent();
    };
    updateContent = () =>
        $.ajax({
            cache: false,
            url: '@Url.Action("GetTopics", "Forum")',
            type: 'GET',
            data: { page: pagination.currentPage, perPage: pagination.perPage },
            success: result => {
                pagination.lastPage = result.lastPage;
                content = result.data;
                updateFlex();
                checkDisable();
            }
        })
    updateFlex = () => {
        const container = $("#container");
        container.empty();
        content.forEach(e =>
            container.append(
                    `
    <hr />
    <div class="row">
        <div class="col-md-6">
            <h3>${e.name}</h3>
        </div>
    </div>
    <h5>${e.description}</h5>


    <a class="btn btn-info" href="/Forum/Discuss/${e.id}">Discuss</a>
`
            ));
    };
    $().ready(function () {
        updateContent();
        updateFlex();
    });
</script>

