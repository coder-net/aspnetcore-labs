@model aspnet.ViewModel.EditPostViewModel
@{
    ViewBag.Title = "Edit topic";
}

<h2>Edit topic</h2>

<form asp-action="Edit" asp-controller="Forum">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Title" class="control-label">Name</label>
        <textarea class="form-control" id="descriptiontext" rows="2" asp-for="Title"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Text" class="control-label">Description</label>
        <textarea class="form-control" id="descriptiontext" rows="6" asp-for="Text"></textarea>
    </div>
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-default" />
    </div>
</form>