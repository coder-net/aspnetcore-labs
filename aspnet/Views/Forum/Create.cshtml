@using Microsoft.Extensions.Options

@inject IViewLocalizer Localizer

@model aspnet.ViewModel.CreateTopicViewModel
@{
    ViewBag.Title = Localizer["create"];
}

<div>
    <h2>@Localizer["create"]</h2>
</div>

<form asp-action="Create" asp-controller="Forum">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name" class="control-label">@Localizer["name"]</label>
        <textarea placeholder="@Localizer["name_content"]"
                  class="form-control" id="descriptiontext" rows="2" asp-for="Name"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label">@Localizer["description"]</label>
        <textarea placeholder="@Localizer["description_content"]"
                  class="form-control" id="descriptiontext" rows="3" asp-for="Description"></textarea>
    </div>
    <div class="form-group">
        <input type="submit" value="@Localizer["add"]" class="btn btn-default" />
    </div>
</form>