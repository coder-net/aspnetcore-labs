@using Microsoft.Extensions.Options

@inject IViewLocalizer Localizer

@model aspnet.ViewModel.EditCommentViewModel
@{
    ViewBag.Title = Localizer["edit"];
}
<h2>@Localizer["edit"]</h2>

<form asp-action="EditMessage" asp-controller="Forum">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Text" class="control-label">@Localizer["content"]</label>
        <textarea class="form-control" id="descriptiontext" rows="3" asp-for="Text"></textarea>
    </div>
    <div class="form-group">
        <input type="submit" value="@Localizer["ready"]" class="btn btn-default" />
    </div>
</form>